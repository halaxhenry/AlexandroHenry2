<!-- search by stock with manager who have this search term-->
<h1>Hedge Funds</h1><br>
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(hedgeFund != '') { %>
    <% hedgeFund.forEach(function(hedge, index){ %>
    <a href="/recipe/<%= hedge._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/managerImg/<%= hedge.managerImg %>" alt="<%= hedge.manager %>" loading="lazy">
      </div>
      <div class="pt-1"><%= hedge.manager %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>